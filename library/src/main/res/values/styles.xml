<resources>

    <style name="BaseWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeadTitleTv" parent="@style/BaseWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitleTv" parent="@style/HeadTitleTv">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BaseHeadTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeadLeftTv" parent="@style/BaseHeadTv">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="HeadRightTv" parent="@style/BaseHeadTv">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="HeadLeftIv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_white_back</item>
    </style>

    <style name="HeadRightIv">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="HeadViewLine">
        <item name="android:background">#DFDFDF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>